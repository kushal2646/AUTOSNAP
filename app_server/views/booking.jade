extends layout

block content
  .container.py-5
    // Header
    h1.display-4.text-primary.mb-4 BOOK YOUR SERVICE
    p.lead.text-muted Fill in your details below to schedule your appointment in one go.

    // ⭐️ Form starts here: POSTs to /booking-success ⭐️
    form(action='/booking-success', method='POST')
      .card.shadow-sm.p-4.p-md-5
        
        // --- SECTION 1: CONTACT & SERVICE DETAILS (Two-Column Layout) ---
        h2.h4.text-primary.mb-4 Contact & Service Information
        .row.g-4.mb-5
          
          // Full Name
          .col-md-6
            label.form-label(for='name') Full Name
            input.form-control#name(type='text', name='name', placeholder='Enter your full name', required)
          
          // Email ID
          .col-md-6
            label.form-label(for='email') Email ID
            input.form-control#email(type='email', name='email', placeholder='your.email@example.com', required)
            .form-text We'll send your booking confirmation here.

          // Phone Number
          .col-md-6
            label.form-label(for='phone') Phone Number
            input.form-control#phone(type='tel', name='phone', pattern='[0-9]{8,15}', placeholder='e.g. 9823322332', required)
            .form-text Used for service reminders.
          
          // Select Service
          .col-md-6
            label.form-label(for='service') Select Service
            select.form-select#service(name='service', required)
              option(value='') -- Select a service category --
              option(value='Preventive Maintenance Service') Preventive Maintenance Service
              option(value='Car Care Service') Car Care Service
              option(value='Car Body Repair Service') Car Body Repair Service

        // --- SECTION 2: VEHICLE DETAILS ---
        h2.h4.text-primary.mb-4 Vehicle Details
        .row.g-4.mb-5

          // Car Make
          .col-md-4
            label.form-label(for='carMake') Car Make
            input.form-control#carMake(type='text', name='carMake', placeholder='e.g. Suzuki, Toyota...', required)
          
          // Car Model
          .col-md-4
            label.form-label(for='carModel') Car Model
            input.form-control#carModel(type='text', name='carModel', placeholder='e.g. Alto, Innova...', required)
          
          // Kilometers Ran
          .col-md-4
            label.form-label(for='kilometersRan') Kilometers Ran (Approx.)
            input.form-control#kilometersRan(type='number', name='kilometersRan', placeholder='e.g. 12000', required)

          // Fuel Type (Full Width)
          .col-12
            label.form-label Fuel Type
            .d-flex.flex-wrap.gap-4.pt-2
              .form-check.form-check-inline
                input.form-check-input#petrol(type='radio', name='fuelType', value='Petrol', required)
                label.form-check-label(for='petrol') Petrol
              .form-check.form-check-inline
                input.form-check-input#diesel(type='radio', name='fuelType', value='Diesel')
                label.form-check-label(for='diesel') Diesel
              .form-check.form-check-inline
                input.form-check-input#lpg(type='radio', name='fuelType', value='LPG')
                label.form-check-label(for='lpg') LPG
              .form-check.form-check-inline
                input.form-check-input#others(type='radio', name='fuelType', value='Others')
                label.form-check-label(for='others') Others
        
        // --- SECTION 3: APPOINTMENT TIME & NOTES ---
        h2.h4.text-primary.mb-4 Preferred Time
        .row.g-4.mb-5
            // Preferred Date
            .col-md-6
              label.form-label(for='preferredDate') Preferred Date
              input.form-control#preferredDate(type='date', name='preferredDate', required)

            // Preferred Time Slot
            .col-md-6
              label.form-label(for='preferredTimeSlot') Preferred Time Slot
              select.form-select#preferredTimeSlot(name='preferredTimeSlot', required)
                option(value='') -- Select Time Slot --
                option(value='09:00-11:00') 09:00 AM - 11:00 AM
                option(value='11:00-13:00') 11:00 AM - 01:00 PM
                option(value='14:00-16:00') 02:00 PM - 04:00 PM
                option(value='16:00-18:00') 04:00 PM - 06:00 PM
              .form-text Choose a 2-hour window.

            // Special Notes
            .col-12
              label.form-label(for='specialNotes') Special Requests/Notes (Optional)
              textarea.form-control#specialNotes(name='specialNotes', rows='3', placeholder='e.g., "Please check the front brake pads" or "Requesting pick-up service"')

        // --- SUBMIT BUTTON ---
        .d-grid
          button.btn.btn-lg.btn-success(type='submit') Schedule an Appointment Now!