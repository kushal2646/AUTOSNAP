#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('autosnap:server');
var http = require('http');

// ðŸŒŸ CRITICAL FIX: 1. Import the database connection promise
// Adjust the path if your 'models' directory is not directly inside '../app_server'
const { dbConnectionPromise } = require('../app_server/models/db');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3001');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

// ðŸŒŸ CRITICAL FIX: 2. Wait for the database connection before starting the server
dbConnectionPromise
  .then(() => {
    // Database is connected! Now it's safe to start the server.
    console.log('âœ… Database connected. Starting web server...');
    
    server.listen(port);
    server.on('error', onError);
    server.on('listening', onListening);
  })
  .catch((err) => {
    // Handle the case where the database connection failed entirely
    console.error('âŒ FATAL ERROR: Database connection failed. Shutting down.', err);
    process.exit(1);
  });


/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      console.error('Check if another instance of your app is already running.');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
  console.log(`Web server listening on port ${addr.port}`); // Added log for clarity
}